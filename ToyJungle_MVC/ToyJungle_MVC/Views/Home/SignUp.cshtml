
@{
    ViewBag.Title = "Login";


}
<script src="~/assets/alertifyjs/alertify.min.js "></script>
<link rel="stylesheet" href="~/assets/alertifyjs/css/alertify.min.css" />
<link rel="stylesheet" href="`/assets/alertifyjs/css/themes/default.min.css" />

<script src="~/assets/js/angular.min.js"></script>
<script src="~/assets/js/angular-sanitize.min.js"></script>
<script>
        var app = angular.module('myApp', []);
        app.controller('customersCtrl', function ($scope, $http, $location) {
            $scope.Name = "Rishi";



        });


</script>

<div ng-app="myApp" onload="Load()" ng-controller="customersCtrl">

    <div class="container d-xl-flex align-items-xl-center" style="margin-top: 20px;">
        <h4 class="text-secondary flex-fill">New User ?</h4>
    </div>
    <hr>


    <div class="container">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="col-md-10 col-md-offset-1">
                        <form method="post" name="SignUpForm" action="/Home/SignUp">

                            <div class="form-group">
                                <div class="col-md-12">
                                    User Name<br />
                                    <input class="form-control input-lg" type="text" name="UserName" title="Name" value="@ViewBag.User.UserName" required pattern="[a-zA-Z .]{3,25}" placeholder="Enter Name">
                                    <p> </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    Mobile<br />
                                    <input class="form-control input-lg" type="text" name="Mobile" title="Mobile" value="@ViewBag.User.Mobile" maxlength="10" required pattern="[6789]{1}[0-9]{9}" placeholder="Enter Mobile Number">
                                    <p> </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    Email<br />
                                    <input class="form-control input-lg" type="email" name="Email" value="@ViewBag.User.Email" title="Email" required placeholder="Email">

                                </div>
                            </div>
                            <div class="form-group pl-3 pr-3">
                                <div class="row">
                                    <div class="col">
                                        Password<br />
                                        <input class="form-control input-lg" type="password" name="PWD" ng-model="PWD" required placeholder="Password">

                                    </div>
                                    <div class="col">
                                        Re-Password<br />
                                        <input class="form-control input-lg" type="password" name="REPWD" ng-model="REPWD" required placeholder="Re Enter Password">

                                    </div>

                                </div>

                            </div>


                            @if (!string.IsNullOrEmpty(ViewBag.Error))
                            {
                                <div class="alert alert-danger" role="alert" style="margin-top: 16px;"><i class="fa fa-exclamation-triangle"></i><span><strong>@ViewBag.Error</strong></span></div>
                            }
                            <div class="row">
                                <div class="col">
                                    <button ng-disabled="SignUpForm.$invalid" class="btn btn-warning btn-block" type="submit"> <i class="glyphicon glyphicon-ok"></i> Proceed </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

